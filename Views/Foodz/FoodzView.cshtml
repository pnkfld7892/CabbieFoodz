@{
    ViewData["Title"]=Model.Name;
}
@model FoodzViewModel

<div>
    <form asp-controller="Foodz" asp-action="FoodzView" method="Post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type=text value="@Model.Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" type=text value="@Model.Description" class="form-control"/>
        </div>
        <input type="submit" class="btn btn-outline-warning" value="ok"/>
    </form>
    
</div>