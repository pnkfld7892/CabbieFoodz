<html lang="en">
   <head>
       <meta name="viewport" content="width=device-height, initial-scale=1.0"/>
       <meta charset="utf-8"/>
       <title>CabbieFoodz - @ViewData["Title"]</title>
       <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css"/> 
       <link rel="stylesheet" href="~/css/site.css"/>
   </head>
   <body>
       <header>
           <nav class="navbar navbar-expand-small navbar-toggleable navbar-dark bg-secondary border-bottom mb-3">
                   <a class="navbar-brand"
                      asp-area="" asp-controller="Home" asp-action="Index">CabbieFoodz</a>
                   <button class="navbar-toggler" type="button" data-toggle="collapse" 
                           data-target="#navbarContent" aria-controls="navbarSupportedContent" 
                           aria-expanded="false" aria-label="Toggle navigation">
                       <span class="navbar-toggler-icon"></span>
                   </button>
                   <div class="collapse navbar-collapse" id="navbarContent">
                   <ul class="navbar-nav">
                    <li class="nav-item">
                       <a class="nav-link" asp-controller="Foodz" asp-action="Index">My Foodz</a>
                    </li>
                   </ul>
               </div>
           </nav>
       </header>
       <div class="container">
           <main role="main" class="pb-3">
                @RenderBody()
           </main>
       </div>
       <script src="~/lib/jquery/jquery.min.js"></script>
       <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
   </body>
</html>
